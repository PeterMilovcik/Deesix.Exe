{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "Geography": {
      "type": "object",
      "properties": {
        "Landmasses": {"type": "string"},
        "Landmarks": {"type": "string"},
        "Biomes": {"type": "string"},
        "Climate": {"type": "string"},
        "Resources": {"type": "string"}
      },
      "required": ["Landmasses", "Landmarks", "Biomes", "Climate", "Resources"]
    },
    "Culture": {
      "type": "object",
      "properties": {
        "Languages": {"type": "string"},
        "Societies": {"type": "string"},
        "Traditions": {"type": "string"},
        "Beliefs": {"type": "string"}
      },
      "required": ["Languages", "Societies", "Traditions", "Beliefs"]
    },
    "Economy": {
      "type": "object",
      "properties": {
        "Trade": {"type": "string"},
        "Currency": {"type": "string"},
        "Resources": {"type": "string"},
        "Labor": {"type": "string"}
      },
      "required": ["Trade", "Currency", "Resources", "Labor"]
    },
    "Governance": {
      "type": "object",
      "properties": {
        "Government": {"type": "string"},
        "Law": {"type": "string"},
        "Military": {"type": "string"},
        "Diplomacy": {"type": "string"}
      },
      "required": ["Government", "Law", "Military", "Diplomacy"]
    },
    "Religion": {
      "type": "object",
      "properties": {
        "Pantheons": {"type": "string"},
        "Cults": {"type": "string"},
        "Rituals": {"type": "string"},
        "Temples": {"type": "string"}
      },
      "required": ["Pantheons", "Cults", "Rituals", "Temples"]
    },
    "Technology": {
      "type": "object",
      "properties": {
        "Tools": {"type": "string"},
        "Weapons": {"type": "string"},
        "Armors": {"type": "string"},
        "Machines": {"type": "string"}
      },
      "required": ["Tools", "Weapons", "Armors", "Machines"]
    },
    "Magic": {
      "type": "object",
      "properties": {
        "Schools": {"type": "string"},
        "Spells": {"type": "string"},
        "Artifacts": {"type": "string"},
        "Creatures": {"type": "string"}
      },
      "required": ["Schools", "Spells", "Artifacts", "Creatures"]
    }
  },
  "required": ["Geography", "Culture", "Economy", "Governance", "Religion", "Technology", "Magic"]
}